<!DOCTYPE html>
<html>
  <head>
    <title>GameBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% flash.each do |name, message| %>
      <ul>
        <li><%= message %></li>
      </ul>
    <% end %>

    <%= yield %>
  </body>
</html>
